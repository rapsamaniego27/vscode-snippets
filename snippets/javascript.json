		"Query Selector": {
		"prefix": "select",
		"body": [
			"document.querySelector('$1');"
		],
		"description": "Query Selector"
		},

		"Query Selector All": {
			"prefix": "selectall",
			"body": [
				"document.querySelectorAll('$1');"
			],
			"description": "Query Selector All"
		},

		"Add Event Listener": {
			"prefix": "listen",
			"body": [
				"$1.addEventListener('$2', ($3)=> {",
